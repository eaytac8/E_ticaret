                    @foreach (var a in ViewBag.Ayakkabilar)
                    {
                        if (a.Fiyat > 200)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <img width="1250" height="270" src="/images/@a.Resimyolu" alt="" />
                                            <h2>@string.Format("{0} TL", a.Fiyat)</h2>
                                            <p>@string.Format("{0} - {1}", a.Marka, a.Model)</p>
                                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                                        </div>
                                        <div class="product-overlay">
                                            <div class="overlay-content">
                                                <h2>@a.Fiyat TL</h2>
                                                <p>@string.Format("{0} - {1}", a.Marka, a.Model)</p>
                                                <a href="/Home/SepeteEkle/@a.AyakkabiID" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                                                @Html.ActionLink("İncele" ,"Detay","Home",new {detayid=@a.AyakkabiID,@class= "btn btn-default add-to-cart" },null)<i class="fa fa-shopping-cart"></i>
                                            </div>
                                        </div>
                                    </div>
                                 
